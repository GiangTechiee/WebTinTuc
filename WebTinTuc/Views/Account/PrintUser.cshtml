@model IEnumerable<WebTinTuc.Models.Entities.User>


@{
    ViewData["Title"] = "Danh sách người dùng";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Danh sách người dùng</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var user in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@user.FullAvatarPath" class="card-img-top" alt="Avatar" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@user.FullName</h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>ID:</strong> @user.UserId</li>
                            <li class="list-group-item"><strong>Email:</strong> @user.Email</li>
                            <li class="list-group-item"><strong>Số điện thoại:</strong> @user.PhoneNumber</li>
                            <li class="list-group-item"><strong>VerifyKey:</strong> @user.VerifyKey</li>
                            <li class="list-group-item"><strong>Ngày sinh:</strong> @(user.DateOfBirth?.ToString("dd/MM/yyyy") ?? "Chưa cung cấp")</li>
                            <li class="list-group-item"><strong>Địa chỉ:</strong> @(user.Address ?? "Chưa cung cấp")</li>
                            <li class="list-group-item"><strong>Vai trò:</strong> @(user.Role?.RoleName ?? "User")</li>
                            <li class="list-group-item"><strong>Ngày tạo:</strong> @user.CreatedAt.ToString("dd/MM/yyyy HH:mm")</li>
                            <li class="list-group-item"><strong>Xác nhận email:</strong> @(user.IsEmailConfirmed ? "Đã xác nhận" : "Chưa xác nhận")</li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
</div>