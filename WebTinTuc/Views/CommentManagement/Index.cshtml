@model List<WebTinTuc.Models.Entities.News>

<div class="container mt-4">
    <h2>Quản lý bình luận</h2>
    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Tiêu đề bài viết</th>
                <th>Số bình luận</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var news in Model)
            {
                <tr>
                    <td>@news.Title</td>
                    <td>@news.Comments.Count</td>
                    <td>
                        <a asp-action="Comments" asp-route-newId="@news.NewId" class="btn btn-primary btn-sm">Xem bình luận</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Phân trang -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)">Trước</a>
            </li>
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                </li>
            }
            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)">Sau</a>
            </li>
        </ul>
    </nav>
</div>