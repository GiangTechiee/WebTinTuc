@model WebTinTuc.Models.Entities.Category

<div class="modal fade" id="deleteCategoryModal" tabindex="-1" aria-labelledby="deleteCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteCategoryModalLabel">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa danh mục "<strong>@Model.CategoryName</strong>" không?
            </div>
            <div class="modal-footer">
                <form id="deleteCategoryForm" onsubmit="submitForm(event, 'deleteCategoryForm', '@Url.Action("DeleteConfirmed", "Category", new { id = Model.CategoryId })', 'Xóa thành công')">
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>